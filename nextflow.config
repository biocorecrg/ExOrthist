manifest {
    mainScript = 'main.nf'
}

includeConfig "$baseDir/params.config"
 

process {
    memory='4G'
    cpus='1'
    time='6h'
    scratch = false

    withLabel: big_mem_cpus {
        cpus = 2
        memory = '7G'
    }
 
     withLabel: big_mem {
        cpus = 1
        memory = '7G'
    }
 
}


process.container = 'biocorecrg/exon_intron_pipe:0.1'
singularity.enabled = true
singularity.cacheDir = "$baseDir/singularity"


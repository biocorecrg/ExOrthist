manifest {
    mainScript = 'main.nf'
}

includeConfig "$baseDir/params.config"
 

process {
    queue = 'biocore-el7,long-sl7,short-sl7'
    cache = 'lenient'
    memory='4G'
    cpus='1'
    time='6h'
    scratch = false

    withLabel: big_cpus {
        cpus = 8
        memory = '12G'
    }
 
    withLabel: incr_time_cpus {
       errorStrategy = 'retry'
       memory = '12G'
       cpus = 8
       time = {6.h * task.attempt * task.attempt} 
       maxRetries = 4
    }
    withLabel: big_mem {
        cpus = 1
        memory = '7G'
    }
 
}


process.container = 'biocorecrg/exon_intron_pipe:0.1'
singularity.enabled = true
singularity.cacheDir = "$baseDir/singularity"

